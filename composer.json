{
  "name": "eureka/codingame-template",
  "description": "Codingame - Template application game / puzzle",
  "type": "library",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "Velkuns\\Codingame\\Template\\": "./src",
      "Velkuns\\Codingame\\Template\\Tests\\": "./tests"
    }
  },

  "repositories": [
    {
      "type": "github",
      "url": "https://github.com/velkuns/codingame-core"
    }
  ],

  "require": {
    "php": "7.3.*|7.4.*|8.0.*|8.1.*",
    "velkuns/codingame-core": "^1.6"
  },

  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^v0.7",
    "phpstan/phpstan": "^1.4",
    "phpunit/phpcov": "^8.2",
    "phpunit/phpunit": "^9.4",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
